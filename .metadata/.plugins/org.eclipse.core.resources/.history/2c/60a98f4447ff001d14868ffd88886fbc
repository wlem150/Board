	@GetMapping("/my03")
	public String String(@RequestParam("ids") ArrayList<String> ids) {
		log.info("ids : " + ids);
		return "my03";
	}

	@GetMapping("/my04")
	public String my04(SampleDTOList list) {
		log.info("list dtos : " + list);
		return "my04";
